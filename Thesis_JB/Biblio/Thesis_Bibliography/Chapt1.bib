   issn = {00219606},
   issue = {8},
   journal = {Journal of Chemical Physics},
   title = {Fifth-order two-dimensional Raman spectroscopy of liquid water, crystalline ice lh and amorphous ices: Sensitivity to anharmonic dynamics and local hydrogen bond network structure},
   volume = {125},
   year = {2006},
}
